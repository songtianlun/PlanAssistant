<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_home_location"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_common_small"
    android:layout_marginTop="@dimen/zero_margin_when_normal"
    android:layout_marginEnd="@dimen/dimen_common_small"
    android:layout_marginBottom="@dimen/zero_margin_when_normal"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:outlineAmbientShadowColor="@color/black"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/card_home_location_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/dimen_common_small"
            android:text="@string/card_home_location_title"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_home_location_title"
            android:id="@+id/card_home_location_data_layout"
            android:layout_margin="@dimen/dimen_common_very_small">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_home_location_length_layout"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/card_home_location_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_common"
                    android:layout_marginTop="@dimen/dimen_common"
                    android:layout_marginEnd="@dimen/dimen_common"
                    android:layout_centerHorizontal="true"
                    android:text="@string/card_home_location_length"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />
                <TextView
                    android:id="@+id/card_home_location_length_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_home_location_data"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dimen_common_very_small"
                    android:text="@string/card_home_location_data_title"
                    android:scaleType="centerCrop" />
            </RelativeLayout>




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_home_location_station_layout"
                android:layout_toStartOf="@id/card_home_location_length_layout"
                android:layout_margin="@dimen/dimen_common_very_small">
                <TextView
                    android:id="@+id/card_home_location_station"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_common"
                    android:layout_marginTop="@dimen/dimen_common"
                    android:layout_marginEnd="@dimen/dimen_common"
                    android:layout_centerHorizontal="true"
                    android:text="@string/card_home_location_station"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

                <TextView
                    android:id="@+id/card_home_location_station_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_home_location_station"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:layout_margin="@dimen/dimen_common_very_small"
                    android:text="@string/card_home_location_station_title"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_home_location_quantity_layout"
                android:layout_toEndOf="@id/card_home_location_length_layout"
                android:layout_margin="@dimen/dimen_common_very_small">

                <TextView
                    android:id="@+id/card_home_location_station_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_common"
                    android:layout_marginTop="@dimen/dimen_common"
                    android:layout_marginEnd="@dimen/dimen_common"
                    android:layout_centerHorizontal="true"
                    android:text="@string/card_home_location_quantity"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />
                <TextView
                    android:id="@+id/card_home_location_quantity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_home_location_station_location"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:layout_margin="@dimen/dimen_common_very_small"
                    android:text="@string/card_home_location_station_location"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_card_home_location_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_home_location_data_layout"
            android:layout_marginStart="@dimen/dimen_common"
            android:layout_marginTop="@dimen/dimen_common"
            android:layout_marginEnd="@dimen/dimen_common"
            android:layout_marginBottom="@dimen/dimen_common"
            android:text="@string/card_home_location_date"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />




    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>