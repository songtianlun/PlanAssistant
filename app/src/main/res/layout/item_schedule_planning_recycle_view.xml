<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="6dp"
    tools:context=".activity.SchedulePlanningActivity">


    <TextView
        android:id="@+id/tv_schedule_planning_recycle_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="4dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_schedule_planning_recycle_view_content"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="早饭"
        android:textColor="@color/textPrimary"/>

    <TextView
        android:id="@+id/tv_schedule_planning_recycle_view_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_schedule_planning_recycle_view_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="4dp"
        android:textColor="@color/textSecond"
        tools:text="今天早饭是面和蒸饺"/>

    <TextView
        android:id="@+id/tv_schedule_planning_recycle_view_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_schedule_planning_recycle_view_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="4dp"
        android:textColor="@color/textSecond"
        tools:text="今天早饭是面和蒸饺"/>

</androidx.constraintlayout.widget.ConstraintLayout>