<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_home_task_counter_statistics"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/zero_margin_when_normal"
    android:layout_marginTop="@dimen/zero_margin_when_normal"
    android:layout_marginEnd="@dimen/zero_margin_when_normal"
    android:layout_marginBottom="@dimen/zero_margin_when_normal"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:outlineAmbientShadowColor="@color/black"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/card_home_task_counter_statistics_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/dimen_common_small"
            android:text="@string/card_home_task_counter_statistics_title"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/card_home_plan_counter_statistics_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_common"
            android:layout_marginTop="@dimen/dimen_common"
            android:layout_marginEnd="@dimen/dimen_common"
            android:layout_centerHorizontal="true"
            android:textSize="40dp"
            android:layout_below="@+id/card_home_task_counter_statistics_title"
            android:text="@string/card_home_plan_counter_statistics_today"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/card_home_plan_counter_statistics_today"
            />

